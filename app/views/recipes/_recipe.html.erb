<%=form_with(model: @recipe) do |f| %>

    <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title%>
    </div>
    <%=fields_for @season do |s|%>
    <div>
    この料理に合う季節
        <%=s.select :season,[["指定なし",0],["春",1], ["夏",2], ["秋",3], ["冬",4] ],{selected: 0} %>
    </div>
    <% end %>
    <div class="field">
        <%=f.label :body%> <br />
        <%=f.text_area :body,size: "100x20"%> <br/>
    </div>

    

    <% if request.path_info == new_recipe_path %>
    <%= f.submit "投稿する", class: "btn btn-primary" %>

    <% else %>
        <%= f.submit "編集を完了する", class: "btn btn-primary" %>

<%end%>

<%end%>
